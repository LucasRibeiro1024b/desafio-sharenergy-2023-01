{
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^6.8.2",
    "nodemon": "^2.0.20"
  },
  "scripts": {
    "dev": "nodemon --watch ./src",
    "start": "node ./src",
    "docker:backend:up": "chmod +x ./dockerBackendUp.sh && ./dockerBackendUp.sh",
    "docker:backend:down": "chmod +x ./dockerBackendDown.sh && ./dockerBackendDown.sh",
    "docker:mongo:up": "chmod +x ./dockerMongoUp.sh && ./dockerMongoUp.sh",
    "docker:mongo:down": "chmod +x ./dockerMongoDown.sh && ./dockerMongoDown.sh",
    "docker:up": "npm run docker:mongo:up && npm run docker:backend:up",
    "docker:down": "npm run docker:mongo:down && npm run docker:backend:down"
  }
}
