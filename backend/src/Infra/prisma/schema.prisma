generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cliente {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  nome     String   @unique
  email    String    @unique
  telefone String
  endereco  Endereco?
  cpf       String    @unique
}

model Endereco {
  id  String  @id @default(auto()) @map("_id") @db.ObjectId
  rua String
  bairro String
  cidade String
  cliente Cliente @relation(fields: [clienteId], references: [id])
  clienteId String @unique @db.ObjectId
}